import Part
import FreeCAD as App
import FreeCADGui as Gui

doc = App.newDocument("TackleLayout")

# Overhead I-Beam
beam = Part.makeBox(6000, 100, 200, App.Vector(0, 0, 3000))
Part.show(beam)

# Electric Hoist
hoist = Part.makeBox(400, 300, 300, App.Vector(2800, -100, 2700))
Part.show(hoist)

# Hook Line
hook_cylinder = Part.makeCylinder(20, 800, App.Vector(3000, 50, 1900))
Part.show(hook_cylinder)

# Differential Case (elliptical cylinder + dome)
case_body = Part.makeCylinder(250, 300, App.Vector(2875, -75, 1600))
case_dome = Part.makeSphere(250, App.Vector(2875, 75, 1600))
Part.show(case_body)
Part.show(case_dome)

# Fixture/Base
fixture = Part.makeBox(1000, 500, 100, App.Vector(2500, -250, 1500))
Part.show(fixture)

# Sling (represented as rods)
sling1 = Part.makeCylinder(10, 500, App.Vector(2850, 0, 2100), App.Vector(0, 0, -1))
sling2 = Part.makeCylinder(10, 500, App.Vector(2950, 100, 2100), App.Vector(0, 0, -1))
Part.show(sling1)
Part.show(sling2)

